block related {

    content: [
        {
            elem: 'body',
            mix: { block: 'box', elem: 'body' },
            content: [
                { elem: 'header', content: 'Related info' }
            ]
        },
        { elem: 'text', content: this.ctx.text }
    ]

    elem header, tag: 'h4'

    elem text, mix: [{ block: 'box', elem: 'island' }]

}
